<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 用户学习资料 <span class="c-gray en">&gt;</span> 资料管理 <a class="btn btn-primary radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
    <div class="cl pd-5 bg-1 bk-gray mt-10 search-wrap">
        <span class="label-inline">标题：</span>
        <input type="text" id="resTitle" placeholder="请输入标题关键字" class="input-text lg inline" />
        <span class="label-inline">所属资料包：</span>
        <select name="sel_orderstate" id="sel_resPage" class="select select-box sm inline">
            <option value="0">全部</option>
            @foreach (KeyValueViewModel item in ViewBag.packges)
            {
            <option value="@item.Key">@item.Value</option>
            }
        </select>
        <span class="label-inline">文件格式：</span>
        <select name="sel_orderstate" id="sel_resFormat" class="select select-box sm inline">
            <option value="@((int)FileFormat.UnKnow)">全部格式</option>
            <option value="@((int)FileFormat.Word)">WORD文档</option>
            <option value="@((int)FileFormat.PPT)">PPT文档</option>
            <option value="@((int)FileFormat.PDF)">PDF文档</option>
            <option value="@((int)FileFormat.Video)">视频</option>
            <option value="@((int)FileFormat.Audio)">音频</option>
        </select>
        <span class="label-inline">查看权限：</span>
        <select name="sel_orderstate" id="sel_retPermission" class="select select-box sm inline">
            <option value="0">全部用户</option>
            @foreach (KeyValueViewModel item in ViewBag.memberTypes)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
        <span class="label-inline">排序方式：</span>
        <select name="sel_orderstate" id="sel_resSort" class="select select-box sm inline">
            @*<option value="@((int)FilterSortOrder.UnKnow)">全部</option>
            <option value="@((int)FilterSortOrder.UpgradeTime)">更新时间</option>
            <option value="@((int)FilterSortOrder.PvDescending)">浏览量从高到低</option>
            <option value="@((int)FilterSortOrder.PvAscending)">浏览量从低到高</option>*@
        </select>
        <button name="search" id="search" class="btn btn-success ml-10" type="button"><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
        <button class="btn btn-warning" onclick="res_add('添加资料','@Url.Action("Add")')" type="button">添加资料</button>
    </div>
    <div class="mt-10">
        <table id="tbTable" class="table table-border table-bordered table-bg table-sort">
            <thead>
                <tr class="text-c">
                    <th width="8%">序号</th>
                    <th width="15%">标题</th>
                    <th width="15%">所属资料包</th>
                    <th width="8%">格式</th>
                    <th width="13%">展示时间</th>
                    <th width="10%">更新时间</th>
                    <th width="8%">状态</th>
                    <th width="8%">浏览量</th>
                    <th width="15%">管理</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@Scripts.Render("~/bundles/datatable")
@section scripts {
    <script type="text/javascript">
        var table1 = null;
        $(function () {
            table1 = initializeTable();
            $("#search").click(function () {
                table1.ajax.reload();
            });

            //输入名称回车查询
            $("#resTitle").keypress(function (e) {
                if (e.which == 13) {
                    table1.ajax.reload();
                    $("#search").focus();
                }
            });
        });

        /*资料-编辑*/
        function res_edit(title, url, id) {
            var index = layer.open({
                type: 2,
                title: title,
                area: ['750px', '650px'],
                content: url + "?id=" + id
            });
        }

        /*资料-添加*/
        function res_add(title, url) {
            var index = top.layer.open({
                type: 2,
                title: title,
                area: ['750px', '650px'],
                content: url
            });
        }

        /*资料-详情*/
        function res_detail(title, url, id) {
            var index = layer.open({
                type: 2,
                title: title,
                area: ['750px', '600px'],
                content: url + "?id=" + id
            });
        }


        /*删除资料*/
        function res_del(id, title) {
            layer.confirm('确认要删除该资料吗？', function (e) {
                $.ajax({
                    url: "@Url.Action("Delete")",
                    type: "post",
                    data: { id: id, name: title },
                    success: function (data) {
                        if (data == "ok") {
                            layer.alert('操作成功！', {
                                icon: 6,
                                closeBtn: 0,
                                yes: function () {
                                    table1.ajax.reload();
                                    layer.closeAll();
                                }
                            });
                        } else {
                            layer.alert('操作失败！', { icon: 5 });
                        }
                    },
                    error: function (data) { layer.alert('操作失败！', { icon: 5 }); }
                })
            });
        }
        function initializeTable() {
            var dataTable = $('#tbTable').DataTable({
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("GetJsonData")",
                    "type": "post",
                    "data": function (data) {
                        data.pageIndex = (data.start / data.length) + 1;
                        data.name = $("#resTitle").val();
                        data.packgeId = $("#sel_resPage").val();
                        data.format = $("#sel_resFormat").val();
                        data.memberTypeId = $("#sel_retPermission").val();
                        data.sort = $("#sel_resSort").val();
                    }
                },
                "columns": [
                      { "defaultContent": "" },
                      { "mDataProp": "Title" },
                      { "mDataProp": "PackageName" },
                      { "mDataProp": "FormatStr" },
                      { "mDataProp": "ShowTimeRange" },
                       { "mDataProp": "UpgradeTime" },
                       { "mDataProp": "State" },
                       { "mDataProp": "PvSum" },
                      { "defaultContent": "" }

                ],
                "columnDefs": [
                 {
                     "targets": [6],
                     "data": "State",
                     "render": function (data, type, full) {
                         var result = data;
                         if (data) {
                             result = "<span class=\"label label-success radius\">启用</span>";
                         } else {
                             result = "<span class=\"label label-danger radius\">禁用</span>";
                         }

                         return result;
                     }
                 },
                {
                    "targets": [-1],
                    "data": "Id",
                    "render": function (data, type, full) {
                        var tmpString = "<a style=\"text-decoration:none\" onClick=\"res_detail('查看资料','@Url.Action("Detail")'," + data + ")\" href=\"javascript:;\" title=\"查看\">查看</a>";
                        tmpString += "<a style=\"text-decoration:none\" onClick=\"res_edit('修改资料','@Url.Action("Edit")'," + data + ")\" href=\"javascript:;\" title=\"编辑\">编辑</a>";
                        tmpString += "<a href=\"javascript:;\" onClick=\"res_del(" + data + ",'" + full.Title + "')\"  title=\"删除\">删除</a>";
                        return tmpString;
                    }
                }
                ],
                "fnDrawCallback": function () {
                    var api = this.api();
                    var startIndex = api.context[0]._iDisplayStart;
                    api.column(0).nodes().each(function (cell, i) {
                        cell.innerHTML = startIndex + i + 1;
                    });
                },
                "rowCallback": function (row, data, displayIndex) {
                    $(row).attr("class", "text-c");
                    $(row).children('td').eq(6).attr("class", "td-status");
                    $(row).children('td').eq(8).attr("class", "td-manage");
                },
                "initComplete": function (settings, json) {

                },
                language: {
                    lengthMenu: '',
                    loadingRecords: '数据加载中...',
                    paginate: {
                        previous: "上一页",
                        next: "下一页",
                        first: "",
                        last: ""
                    },
                    zeroRecords: "暂无数据",

                    info: "<span class='pagesStyle'>总共<span class='recordsStyle'> _TOTAL_ 条,计 _PAGES_ </span>页，当前显示 _START_ -- _END_ 条记录 </span>",
                    infoEmpty: "0条记录",
                    infoFiltered: ""
                },
                "searching": false,
                "ordering": false,
                "autoWidth": false,
                "iDisplayLength": 10,
                "processing": true,
                //destroy: true, //Cannot reinitialise DataTable,解决重新加载表格内容问题

            });
            return dataTable;
        }

    </script>
}