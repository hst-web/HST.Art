<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 用户学习资料 <span class="c-gray en">&gt;</span> 资料管理 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
    <div class="cl pd-10 bg-1 bk-gray mt-10 search-wrap">
        <span class="label-inline">筛选：</span>
        <select name="sel_orderstate" id="sel_filType" class="select select-box sm inline">
            <option value="">请选择筛选条件</option>
            <option value="@((int)SearchType.Number)">手机号</option>
            <option value="@((int)SearchType.Name)">姓名</option>
            <option value="@((int)SearchType.State)">状态</option>
        </select>
        <input type="text" id="sel_filVal" placeholder="请输入筛选关键字" class="input-text lg inline" />
        <select name="sel_orderstate" id="sel_state" class="select select-box sm inline hidden">
            <option value="@((int)PublishState.Upper)">已上架</option>
            <option value="@((int)PublishState.Lower)">已下架</option>
        </select>
        <button name="search" id="search" class="btn btn-success ml-20" type="button"><i class="Hui-iconfont">&#xe665;</i> 查询</button>
        <button class="btn btn-warning" onclick="user_add('新建账户','@Url.Action("Add")')" type="button">新建账户</button>
    </div>
    <div class="mt-10">
        <table id="tbTable" class="table table-border table-bordered table-bg table-sort">
            <thead>
                <tr class="text-c">
                    <th width="8%">序号</th>
                    <th width="12%">用户名</th>
                    <th width="12%">姓名</th>
                    <th width="12%">手机号</th>
                    <th width="12%">邮箱</th>
                    <th width="15%">创建时间</th>
                    <th width="8%">状态</th>
                    <th width="15%">管理</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@Scripts.Render("~/bundles/datatable")
@section scripts {
    <script type="text/javascript">
        var table1 = null;
        $(function () {
            table1 = initializeTable();
            $("#search").click(function () {
                table1.ajax.reload();
            });

            //输入名称回车查询
            $("#sel_filVal").keypress(function (e) {
                if (e.which == 13) {
                    table1.ajax.reload();
                    $("#search").focus();
                }
            });

            $("#sel_filType").change(function () {
                if ($(this).val() == '@((int)SearchType.State)') {
                    $("#sel_state").removeClass("hidden");
                    $("#sel_filVal").addClass("hidden");
                } else {
                    $("#sel_filVal").removeClass("hidden");
                    $("#sel_state").addClass("hidden");
                }

                $("#sel_filVal").val("");
            })
        });

        /*编辑*/
        function user_deit(title, url, id) {
            var index = layer.open({
                type: 2,
                title: title,
                area: ['750px', '520px'],
                content: url + "?id=" + id
            });
        }

        /*添加*/
        function user_add(title, url) {
            var index = top.layer.open({
                type: 2,
                title: title,
                area: ['750px', '520px'],
                content: url
            });
        }

        function getFilterVal() {
            if ($("#sel_filType").val() == '@((int)SearchType.State)') {
                return $("#sel_state").val();
            } else {
                return  $("#sel_filVal").val();
            }

        }

        /*删除*/
        function user_del(id, title) {
            layer.confirm('确认要删除该账户吗？', function (e) {
                $.ajax({
                    url: "@Url.Action("Delete")",
                    type: "post",
                    data: { id: id, name: title },
                    success: function (data) {
                        if (data == "ok") {
                            layer.alert('操作成功！', {
                                icon: 6,
                                closeBtn: 0,
                                yes: function () {
                                    table1.ajax.reload();
                                    layer.closeAll();
                                }
                            });
                        } else {
                            layer.alert('操作失败！', { icon: 5 });
                        }
                    },
                    error: function (data) { layer.alert('操作失败！', { icon: 5 }); }
                })
            });
        }
        function initializeTable() {
            var dataTable = $('#tbTable').DataTable({
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("GetJsonData")",
                    "type": "post",
                    "data": function (data) {
                        data.pageIndex = (data.start / data.length) + 1;
                        data.filterKey = $("#sel_filType").val();
                        data.filterVal = getFilterVal();
                    }
                },
                "columns": [
                      { "defaultContent": "" },
                      { "mDataProp": "UserName" },
                    { "mDataProp": "RealName" },
                      { "mDataProp": "Phone" },
                      { "mDataProp": "Email" },
                       { "mDataProp": "CreateTime" },
                       { "mDataProp": "State" },
                      { "defaultContent": "" }

                ],
                "columnDefs": [
                 {
                     "targets": [6],
                     "data": "State",
                     "render": function (data, type, full) {
                         var result = data;
                         if (data > 0) {
                             result = "<span class=\"label label-success radius\">已上架</span>";
                         } else {
                             result = "<span class=\"label label-danger radius\">已下架</span>";
                         }

                         return result;
                     }
                 },
                {
                    "targets": [-1],
                    "data": "Id",
                    "render": function (data, type, full) {
                        var tmpString = "<a style=\"text-decoration:none\" onClick=\"res_detail('查看资料','@Url.Action("Detail")'," + data + ")\" href=\"javascript:;\" title=\"查看\">查看</a>";
                        tmpString += "<a style=\"text-decoration:none\" onClick=\"user_deit('修改资料','@Url.Action("Edit")'," + data + ")\" href=\"javascript:;\" title=\"编辑\">编辑</a>";
                        tmpString += "<a href=\"javascript:;\" onClick=\"user_del(" + data + ",'" + full.Title + "')\"  title=\"删除\">删除</a>";
                        return tmpString;
                    }
                }
                ],
                "fnDrawCallback": function () {
                    var api = this.api();
                    var startIndex = api.context[0]._iDisplayStart;
                    api.column(0).nodes().each(function (cell, i) {
                        cell.innerHTML = startIndex + i + 1;
                    });
                },
                "rowCallback": function (row, data, displayIndex) {
                    $(row).attr("class", "text-c");
                    $(row).children('td').eq(6).attr("class", "td-status");
                    $(row).children('td').eq(7).attr("class", "td-manage");
                },
                "initComplete": function (settings, json) {

                },
                language: {
                    lengthMenu: '',
                    loadingRecords: '数据加载中...',
                    paginate: {
                        previous: "上一页",
                        next: "下一页",
                        first: "",
                        last: ""
                    },
                    zeroRecords: "暂无数据",

                    info: "<span class='pagesStyle'>总共<span class='recordsStyle'> _TOTAL_ 条,计 _PAGES_ </span>页，当前显示 _START_ -- _END_ 条记录 </span>",
                    infoEmpty: "0条记录",
                    infoFiltered: ""
                },
                "searching": false,
                "ordering": false,
                "autoWidth": false,
                "iDisplayLength": 10,
                "processing": true,
                //destroy: true, //Cannot reinitialise DataTable,解决重新加载表格内容问题

            });
            return dataTable;
        }

    </script>
}