<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 用户学习资料 <span class="c-gray en">&gt;</span> 资料包管理 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
    <div class="cl pd-5 bg-1 bk-gray mt-10 search-wrap">
        <span class="label-inline">资料包名：</span>
        <input type="text" id="packgeName" placeholder="请输入资料包名" class="input-text lg inline" />
        <span class="label-inline">状态：</span>
        <select name="sel_orderstate" id="sel_packgeState" class="select select-box inline">
            <option value="-1">全部</option>
            <option value="1">启用</option>
            <option value="0">禁用</option>
        </select>
        <span class="label-inline">更新时间：</span>
        <input type="text" onclick="WdatePicker()" placeholder="更新时间" id="upgradeTime" class="input-text inline Wdate" />
        <button name="search" id="search" class="btn btn-success ml-10" type="button"><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
        <button class="btn btn-warning" onclick="resPage_add('添加资料包','@Url.Action("Add")')" type="button">添加资料包</button>
    </div>
    <div class="mt-10">
        <table id="tbTable" class="table table-border table-bordered table-bg table-sort">
            <thead>
                <tr class="text-c">
                    <th width="8%">序号</th>
                    <th width="24%">资料包名称</th>
                    <th width="14%">状态</th>
                    <th width="14%">排序</th>
                    <th width="20%">更新时间</th>
                    <th width="20%">管理</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@Scripts.Render("~/bundles/datatable")
@section scripts {
    <script type="text/javascript">
        var table1 = null;
        $(function () {
            table1 = initializeTable();
            $("#search").click(function () {
                table1.ajax.reload();
            });

            //输入名称回车查询
            $("#packgeName").keypress(function (e) {
                if (e.which == 13) {
                    table1.ajax.reload();
                    $("#search").focus();
                }
            });
        });

        /*资料包-编辑*/
        function resPage_edit(title, url, id) {
            var index = layer.open({
                type: 2,
                title: title,
                area: ['700px', '320px'],
                content: url + "?id=" + id
            });
        }

        /*资料包-添加*/
        function resPage_add(title, url) {
            var index = layer.open({
                type: 2,
                title: title,
                area: ['700px', '320px'],
                content: url
            });
        }
        /*删除资料包*/
        function resPage_del(id) {
            layer.confirm('确认要删除该资料包吗？', function (e) {
                $.ajax({
                    url: "@Url.Action("Delete")",
                    type: "post",
                    data: { id: id },
                    success: function (data) {
                        if (data == "ok") {
                            layer.alert('操作成功！', {
                                icon: 6,
                                closeBtn: 0,
                                yes: function () {
                                    table1.ajax.reload();
                                    layer.closeAll();
                                }
                            });
                        } else if (data == "error") {
                            layer.alert('操作失败！', { icon: 5 });
                        }
                        else {
                            layer.alert(data, { icon: 7 });
                        }
                    },
                    error: function (data) { layer.alert('操作失败！', { icon: 5 }); }
                })
            });
        }
        function initializeTable() {
            var dataTable = $('#tbTable').DataTable({
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("GetJsonData")",
                    "type": "post",
                    "data": function (data) {
                        data.pageIndex = (data.start / data.length) + 1;
                        data.name = $("#packgeName").val();
                        data.state = $("#sel_packgeState").val();
                        data.upgradetime = $("#upgradeTime").val();
                    }
                },
                "columns": [
                      { "defaultContent": "" },
                      { "mDataProp": "Name" },
                      { "mDataProp": "State" },
                      { "mDataProp": "Sort" },
                      { "mDataProp": "UpgradeTimeStr" },
                      { "defaultContent": "" }

                ],
                "columnDefs": [
                 {
                     "targets": [2],
                     "data": "State",
                     "render": function (data, type, full) {
                         var result = data;
                         if (data) {
                             result = "<span class=\"label label-success radius\">启用</span>";
                         } else {
                             result = "<span class=\"label label-danger radius\">禁用</span>";
                         }

                         return result;
                     }
                 },
                {
                    "targets": [-1],
                    "data": "Id",
                    "render": function (data, type, full) {
                        var tmpString = "<a style=\"text-decoration:none\" onClick=\"resPage_edit('修改资料包','@Url.Action("Edit")'," + data + ")\" href=\"javascript:;\" title=\"编辑\">编辑</a>";
                        tmpString += "<a href=\"javascript:;\" onClick=\"resPage_del(" + data + ")\"  title=\"删除\">删除</a>";
                        return tmpString;
                    }
                }
                ],
                "fnDrawCallback": function () {
                    var api = this.api();
                    var startIndex = api.context[0]._iDisplayStart;
                    api.column(0).nodes().each(function (cell, i) {
                        cell.innerHTML = startIndex + i + 1;
                    });
                },
                "rowCallback": function (row, data, displayIndex) {
                    $(row).attr("class", "text-c");
                    $(row).children('td').eq(2).attr("class", "td-status");
                    $(row).children('td').eq(5).attr("class", "td-manage");
                },
                "initComplete": function (settings, json) {

                },
                language: {
                    lengthMenu: '',
                    loadingRecords: '数据加载中...',
                    paginate: {
                        previous: "上一页",
                        next: "下一页",
                        first: "",
                        last: ""
                    },
                    zeroRecords: "暂无数据",

                    info: "<span class='pagesStyle'>总共<span class='recordsStyle'> _TOTAL_ 条,计 _PAGES_ </span>页，当前显示 _START_ -- _END_ 条记录 </span>",
                    infoEmpty: "0条记录",
                    infoFiltered: ""
                },
                "searching": false,
                "ordering": false,
                "autoWidth": false,
                "iDisplayLength": 10,
                "processing": true,
                //destroy: true, //Cannot reinitialise DataTable,解决重新加载表格内容问题

            });
            return dataTable;
        }

    </script>
}